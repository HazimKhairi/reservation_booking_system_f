def register():
    name = input("Name: ")
    student_id = input("Student ID: ")
    faculty = input("Faculty: ")
    username = input("Username: ")
    password = input("Password: ")

    conn = connect_db()
    cur = conn.cursor()
    try:
        cur.execute("""
        INSERT INTO users (name,student_id,faculty,username,password,role)
        VALUES (?,?,?,?,?,'student')
        """,(name,student_id,faculty,username,password))

        uid = cur.lastrowid  # dapatkan ID user baru
        cur.execute("INSERT INTO bank VALUES (?,0)", (uid,))  # system balance
        cur.execute("INSERT INTO user_bank_acc VALUES (?,1000)", (uid,))  # bank account

        conn.commit()
        print("‚úÖ Registration successful. Bank account created with balance 1000.")
    except:
        print("‚ùå Username exists")
    conn.close()

def login():
    u = input("Username: ")
    p = input("Password: ")
    conn = connect_db()
    cur = conn.cursor()
    cur.execute("SELECT * FROM users WHERE username=? AND password=?", (u,p))
    user = cur.fetchone()
    conn.close()
    return user

