def view_rooms(user=None, ai_suggestion=False, date=None, start_time=None, end_time=None):
    conn = connect_db()
    cur = conn.cursor()
    cur.execute("SELECT * FROM rooms")
    rooms = cur.fetchall()
    for r in rooms:
        status = "Available"
        if date and start_time and end_time:
            # Check overlapping reservations
            cur.execute("""
            SELECT * FROM reservations
            WHERE room_id=? AND date=? AND status='Active'
            AND NOT (end_time <= ? OR start_time >= ?)
            """, (r["id"], date, start_time, end_time))
            if cur.fetchone():
                status = "Not Available"

        print(f"{r['id']}. {r['room_name']} | Capacity: {r['capacity']} | Status: {status}")

    if ai_suggestion and user:
        print("\nüí° Suggested rooms for your faculty:")
        if user["faculty"].lower() == "science":
            print("Lab rooms recommended")
        elif user["faculty"].lower() == "art":
            print("Studio rooms recommended")
    conn.close()


